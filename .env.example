# ============================================
# SUPABASE CONFIGURATION
# Obtenha essas credenciais em: https://supabase.com/dashboard/project/_/settings/api
# ============================================
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_ANON_KEY=sua_anon_key_aqui

# ============================================
# JWT CONFIGURATION
# OBRIGATÓRIO: Gere um secret forte e único!
# Use: openssl rand -base64 32
# ============================================
JWT_SECRET=GERE_UM_SECRET_FORTE_AQUI
JWT_EXPIRES_IN=7d

# ============================================
# SECURITY CONFIGURATION
# ============================================
BCRYPT_ROUNDS=12
NODE_ENV=production
PORT=3000

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# FRONTEND URL (para CORS)
# Em produção, coloque a URL específica do seu domínio
# ============================================
FRONTEND_URL=*
